<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/images"
    tools:context="com.example.sample.healthmart.ResultsActivity">

    <TextView
        android:text="@string/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/searchResultsText"
        android:textSize="36dp"
        android:textColor="#5C1777"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/medname"
        android:textColor="#5C1777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchResultsText"
        android:layout_alignStart="@+id/searchResultsText"
        android:layout_marginTop="44dp"
        android:id="@+id/med_name" />

    <TextView
        android:text="@string/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/med_name"
        android:layout_alignStart="@+id/med_name"
        android:layout_marginTop="35dp"
        android:id="@+id/cost"
        android:textColor="#5C1777"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/med_name"
        android:id="@+id/medname_val"
        android:layout_alignEnd="@+id/searchResultsText" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cost"
        android:layout_alignStart="@+id/medname_val"
        android:id="@+id/cost_val"
        android:layout_alignEnd="@+id/searchResultsText" />

    <Button
        android:text="@string/placeorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:background="@color/white"
        android:textSize="36dp"
        android:id="@+id/place_order"
        android:onClick="placeorder"
        android:textColor="#5C1777"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/cost"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:id="@+id/quan_val" />

    <TextView
        android:text="@string/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:layout_alignBaseline="@+id/quan_val"
        android:layout_alignBottom="@+id/quan_val"
        android:layout_alignStart="@+id/cost"
        android:textColor="#5C1777"/>

</RelativeLayout>
